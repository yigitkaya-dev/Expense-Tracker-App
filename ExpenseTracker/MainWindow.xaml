<Window x:Class="ExpenseTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Expense Tracker" Height="800" Width="850">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />  <!-- Larger for Description -->
            <ColumnDefinition Width="1*" />  <!-- Smaller for Amount -->
            <ColumnDefinition Width="1.5*" /> <!-- Medium for Category Dropdown -->
            <ColumnDefinition Width="1*" /> <!-- Button Column -->
        </Grid.ColumnDefinitions>

        <!-- Labels for Text Fields -->
        <TextBlock Text="Description" Grid.Column="0" Margin="10,5,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <TextBlock Text="Amount ($)" Grid.Column="1" Margin="10,5,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <TextBlock Text="Category" Grid.Column="2" Margin="10,5,0,0" VerticalAlignment="Top" FontWeight="Bold"/>

        <!-- Description Input -->
        <TextBox Name="txtDescription" Width="200" Height="25" Grid.Column="0" Margin="10,25,10,0" VerticalAlignment="Top" HorizontalAlignment="Left" />

        <!-- Amount Input -->
        <TextBox Name="txtAmount" Width="100" Height="25" Grid.Column="1" Margin="10,25,10,0" VerticalAlignment="Top"/>

        <!-- Category Dropdown -->
        <ComboBox Name="categoryDropdown" Width="150" Height="25" Grid.Column="2" Margin="10,25,10,0" VerticalAlignment="Top">
            <ComboBoxItem Content="Food"/>
            <ComboBoxItem Content="Rent"/>
            <ComboBoxItem Content="Transport"/>
            <ComboBoxItem Content="Entertainment"/>
            <ComboBoxItem Content="Shopping"/>
            <ComboBoxItem Content="Misc"/>
        </ComboBox>

        <!-- Add Expense Button -->
        <Button Content="Add Expense" Click="AddExpense_Click" Width="100" Height="30" Grid.Column="3" Margin="10,25,10,0" VerticalAlignment="Top"/>

        <!-- Expenses List -->
        <ListView Name="lstExpenses" Margin="10,70,10,10" Grid.ColumnSpan="4">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Description" Width="250" DisplayMemberBinding="{Binding Description}"/>
                    <GridViewColumn Header="Amount ($)" Width="100" DisplayMemberBinding="{Binding Amount}"/>
                    <GridViewColumn Header="Category" Width="150" DisplayMemberBinding="{Binding Category}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
